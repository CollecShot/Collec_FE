{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./app/*"],
      "@assets/*": ["./assets/*"],
      "@apis/*": ["./src/apis/*"],
      "@components/*": ["./src/components/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@constants/*": ["./src/constants/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@themes/*": ["./src/themes/*"],
      "@types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/themes"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/themes/styled.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
